<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDetailsActivity">


    <include
        android:id="@+id/reqAdminsDetails"
        layout="@layout/toolbar_layout">
    </include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amit"
        android:layout_below="@id/reqAdminsDetails"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvNameofAdmin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1803070"
        android:layout_below="@id/tvNameofAdmin"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvIdOfAdmin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01868406894"
        android:layout_below="@id/tvIdOfAdmin"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvphnOfAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Checked"
        android:layout_below="@id/tvphnOfAdmin"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:textSize="13dp"
        android:textColor="#78C4E8"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvCheckAdmin"
        />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCheckAdmin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="364dp"
        android:orientation="horizontal"
        android:id="@+id/adButtons">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/department"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Accept"
            android:id="@+id/acceptAdmin"/>

        <Button
            android:id="@+id/declineAdmin"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Decline" />

    </LinearLayout>

</RelativeLayout>